# MongoDB Connection String
# Get this from MongoDB Atlas or use local: mongodb://localhost:27017/bookreview
MONGO_URI=mongodb://localhost:27017/bookreview

# JWT Secret Key - Use a strong, random string
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT Token Expiration
JWT_EXPIRE=7d

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# CORS Origin (Additional frontend URL if needed)
# Default origins: http://localhost:3000, https://book-review-platform-sage-one.vercel.app
# Add additional origins here separated by comma
CORS_ORIGIN=
